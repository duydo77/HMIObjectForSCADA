<UserControl x:Class="HMITank.ProcessLevel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMITank"
             mc:Ignorable="d" 
              d:DesignHeight="100" d:DesignWidth="20" Background="Black" BorderThickness="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
    <!--Step1-->
    <UserControl.BorderBrush>

        <SolidColorBrush Color="Black" />
    </UserControl.BorderBrush>

    <!--Step2-->
    <Border x:Name="ProcessValue" Width="60" VerticalAlignment="Bottom">
        <Border.Background>
            <LinearGradientBrush x:Name="LinearProcessBrush" StartPoint="0,0" EndPoint="0.5,0" SpreadMethod="Reflect">
                <GradientStop Color="Lime" Offset="0" />
                <GradientStop Color="White" Offset="1.5" />
            </LinearGradientBrush>
        </Border.Background>
    </Border>

</UserControl>
